<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}GreenGoodies{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo.svg') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <a href="{{ path('app_home') }}" class="header__logo">
                <img src="{{ asset('images/logo.svg') }}" alt="GreenGoodies">
            </a>
            <nav class="header__nav">
                {% if app.user %}
                    <a href="{{ path('app_home') }}">Nos produits</a>
                    <a href="{{ path('app_cart') }}">Mon panier</a>
                    <a href="{{ path('app_account') }}">Mon compte</a>
                    <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                {% else %}
                    <a href="{{ path('app_home') }}">Nos produits</a>
                    <a href="{{ path('app_login') }}">Connexion</a>
                    <a href="{{ path('app_register') }}">Inscription</a>
                {% endif %}
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            &copy; GreenGoodies - {{ "now"|date("Y") }}
        </footer>
    </body>
</html>
