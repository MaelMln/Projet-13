{% extends 'base.html.twig' %}

{% block title %}Mon compte - GreenGoodies{% endblock %}

{% block body %}
    <div class="account-page">
        <h1 class="account-page__title">Mon compte</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert--success alert--centered">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert--error alert--centered">
                {{ message }}
            </div>
        {% endfor %}

        <div class="account">
            <div class="account__section">
                <h2 class="account__section-title">Mes commandes</h2>
                {% if orders|length > 0 %}
                    <table class="orders-table">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Date</th>
                                <th>Prix</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ '%02d'|format(order.id) }}</td>
                                    <td>{{ order.validatedAt|date('d/m/Y') }}</td>
                                    <td>{{ order.total|number_format(2, ',', ' ') }}&euro;</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="account__empty-text">Vous n'avez pas encore passé de commande.</p>
                {% endif %}
            </div>

            <div class="account__section">
                <h2 class="account__section-title">Mon accès API</h2>
                <form action="{{ path('app_account_toggle_api') }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle-api') }}">
                    {% if app.user.apiAccess %}
                        <button type="submit" class="btn btn--secondary btn--full-width">Désactiver mon accès API</button>
                    {% else %}
                        <button type="submit" class="btn btn--secondary btn--full-width">Activer mon accès API</button>
                    {% endif %}
                </form>
            </div>

            <div class="account__section">
                <form action="{{ path('app_account_delete') }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-account') }}">
                    <button type="submit" class="btn btn--secondary btn--full-width">Supprimer mon compte</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
